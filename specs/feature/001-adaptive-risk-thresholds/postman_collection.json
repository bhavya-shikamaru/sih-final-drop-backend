{
  "info": {
    "_postman_id": "YOUR_POSTMAN_ID_HERE",
    "name": "UmeedAI Config API - Adaptive Risk Thresholds",
    "description": "Postman collection for managing adaptive risk thresholds via the UmeedAI Backend API. Designed for easy testing and interaction with the `/api/v1/config/thresholds` endpoints.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{bearer_token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Thresholds Management",
      "description": "Endpoints for CRUD operations on risk thresholds.",
      "item": [
        {
          "name": "GET All Thresholds",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/config/thresholds",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "config",
                "thresholds"
              ]
            },
            "description": "Retrieves a list of all configured risk thresholds."
          }
        },
        {
          "name": "POST Create Threshold",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"factor\": \"ATTENDANCE_PERCENTAGE_BELOW\",\n    \"operator\": \"LT\",\n    \"value\": 70,\n    \"description\": \"Flags students with attendance below 70%.\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/config/thresholds",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "config",
                "thresholds"
              ]
            },
            "description": "Creates a new risk threshold. Requires admin role."
          }
        },
        {
          "name": "GET Threshold by Factor",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/config/thresholds/ATTENDANCE_PERCENTAGE_BELOW",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "config",
                "thresholds",
                "ATTENDANCE_PERCENTAGE_BELOW"
              ]
            },
            "description": "Retrieves a single risk threshold by its unique factor identifier. Requires admin role."
          }
        },
        {
          "name": "PUT Update Threshold by Factor",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"value\": 65,\n    \"description\": \"Updated to flag attendance below 65%.\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/config/thresholds/ATTENDANCE_PERCENTAGE_BELOW",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "config",
                "thresholds",
                "ATTENDANCE_PERCENTAGE_BELOW"
              ]
            },
            "description": "Updates an existing risk threshold identified by its factor. Requires admin role."
          }
        },
        {
          "name": "DELETE Reset All Thresholds",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/config/thresholds",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "config",
                "thresholds"
              ]
            },
            "description": "Deletes all custom risk thresholds, reverting to default logic. Requires admin role."
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000",
      "type": "string",
      "description": "The base URL for the API endpoint."
    },
    {
      "key": "bearer_token",
      "value": "YOUR_ADMIN_JWT_TOKEN_HERE",
      "type": "string",
      "description": "JWT Bearer Token for an authenticated admin user."
    }
  ]
}